-# in app/views/users/show.html.haml
%h3 Details about #{@user.username}

%ul#details
  %li
    Username:
    = @user.username
  %li
    Email:
    = @user.email
  %li
    Permission:
    = @user.permission

= link_to 'Edit', edit_user_path(@user)
= button_to 'Delete', user_path(@user), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-primary'
= link_to 'Back to user list', users_path